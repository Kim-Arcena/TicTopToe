<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sai_background"
    tools:context=".AddPlayers"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/sai_sign"
        android:layout_marginTop="50dp">
    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/dragon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Player Names"
                android:textColor="@color/light_gray"
                android:textSize="28dp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/round_teal_input"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphCardView
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    app:neumorph_backgroundColor="@color/teal_bg"
                    app:neumorph_inset="5dp"
                    app:neumorph_insetBottom="5dp"
                    app:neumorph_insetEnd="5dp"
                    app:neumorph_insetStart="5dp"
                    app:neumorph_insetTop="5dp"
                    app:neumorph_shadowColorDark="@color/teal_dark"
                    app:neumorph_shadowColorLight="@color/teal_light"
                    app:neumorph_shadowElevation="8dp"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    app:neumorph_shapeType="pressed"
                    app:neumorph_strokeWidth="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/tylerrr" />

                </soup.neumorphism.NeumorphCardView>

                <EditText
                    android:id="@+id/playerOneName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:height="50dp"
                    android:hint="Player 1"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/darkest_teal"
                    android:textColorHint="@color/darker_teal"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="340dp"
                android:layout_height="90dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/round_teal_input"
                android:elevation="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <soup.neumorphism.NeumorphCardView
                    style="@style/ShapeAppearance.Neumorph.CardView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    app:neumorph_backgroundColor="@color/teal_bg"
                    app:neumorph_inset="5dp"
                    app:neumorph_insetBottom="5dp"
                    app:neumorph_insetEnd="5dp"
                    app:neumorph_insetStart="5dp"
                    app:neumorph_insetTop="5dp"
                    app:neumorph_shadowColorDark="@color/teal_dark"
                    app:neumorph_shadowColorLight="@color/teal_light"
                    app:neumorph_strokeColor="@color/dark_teal"
                    app:neumorph_shadowElevation="8dp"
                    app:neumorph_shapeAppearance="@style/CustomShapeAppearance"
                    app:neumorph_shapeType="pressed"
                    app:neumorph_strokeWidth="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@drawable/josh" />

                </soup.neumorphism.NeumorphCardView>

                <EditText
                    android:id="@+id/playerTwoName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="25dp"
                    android:height="50dp"
                    android:hint="Player 2"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/darkest_teal"
                    android:textColorHint="@color/darker_teal"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/startGameBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_back_pink1000"
                android:elevation="6dp"
                android:stateListAnimator="@null"
                android:text="Start Game"
                android:textColor="@color/white" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>