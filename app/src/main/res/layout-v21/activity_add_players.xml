<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/sai_background"
    tools:context=".AddPlayers"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/sai_sign"
        android:layout_marginTop="90dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginVertical="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Player Namessss"
            android:textSize="28dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <LinearLayout
            android:gravity="center"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/round_teal_input"
            android:orientation="horizontal"
            android:elevation="20dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tylerrr"
                android:adjustViewBounds="true"
                android:layout_marginLeft="15dp"/>

            <EditText
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/playerOneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="25dp"
                android:height="50dp"
                android:hint="Player 1"
                android:textSize="20sp"
                android:textColorHint="@color/darker_teal"
                android:textColor="@color/darkest_teal"
                android:textStyle="bold"/>
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="340dp"
            android:layout_height="90dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/round_teal_input"
            android:orientation="horizontal"
            android:elevation="20dp">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/josh"
                android:adjustViewBounds="true"/>

            <EditText
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/playerTwoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="25dp"
                android:height="50dp"
                android:hint="Player 2"
                android:textSize="20sp"
                android:textColorHint="@color/darker_teal"
                android:textColor="@color/darkest_teal"
                android:textStyle="bold"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/startGameBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Start Game"
            android:textColor="@color/white"
            android:background="@drawable/round_back_pink1000"
            android:elevation="6dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/dragon"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

        </ImageView>
    </RelativeLayout>
</LinearLayout>